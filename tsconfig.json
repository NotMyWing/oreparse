{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
	]
}